<head>
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>
<h1>Welcome to Members Only!</h1>
<% if (locals.user) {%>
<h2 class="login-container">
  Logged in as <%= user.member_status %> (<%= user.username %>)<a
    href="/log-out"
    ><button class="logout">X</button></a
  >
</h2>

<% } else { %>
<h2>log in to see more</h2>
<% } %>
<span
  ><a href="/sign-up"><button>Signup</button></a>
  <a href="/log-in"><button>Login</button></a></span
>
<% if (locals.user) {%>
<a href="join-secret-cult"><button class="glow">Join</button></a><% } %>
<h1>Messages</h1>
<% if (locals.user) { %>
<a href="/new"><button>New Message</button></a>
<% } %> <% for(message of messages) { %>
<h2><%= message.title %></h2>
<li><%= message.text %></li>
<% if (locals.user) { %>
<li>posted by <%= message.created_by %> at <%= message.timestamp %></li>
<% } %> <% } %>
